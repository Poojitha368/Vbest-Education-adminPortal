<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Portal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <!-- <link rel="stylesheet" href="css/dropdown.css"> -->
    <!-- <link rel="stylesheet" href="css/question.css"> -->
</head>
<body>
    <h1>Welcome to the Admin Portal</h1>
    <form id="dropdowns">
        <select id="syllabus" class="form-select" required>
            <option value="" selected>Select Syllabus</option>
            <% syllabus.forEach(item => { %>
                <option value="<%= item.syllabus_id %>"><%= item.syllabus_name %></option>
            <% }); %>
        </select>
        <select id="year" class="form-select" required>
            <option selected>Select year</option>
        </select>
        <select id="subject" class="form-select" required>
            <option selected>Select subject</option>
        </select>
        <select id="chapter" class="form-select" required>
            <option selected>Select chapter</option>
        </select>
        <button type="submit" class="btn btn-primary">Submit</button>
        <button id="clear" class="btn btn-primary">clear</button>
    </form>

    <script src="/js/dropdowns_js.js"></script>
</body>
</html>
