<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <link rel="stylesheet" href="/css/form.css" />
    <link rel="stylesheet" href="/css/question.css" />
  </head>
  <body>
    <form id="myform">
      <h1>Welcome to the admin Portal</h1>
      <select id="syllabus" class="form-select" aria-label="Syllabus">
        <option value="" selected>Select Syllabus</option>
        <% syllabus.forEach(item => { %>
        <option value="<%= item.syllabus_id %>">
          <%= item.syllabus_name %>
        </option>
        <% }); %>
      </select>
      <select id="year" class="form-select" aria-label="select example">
        <option selected>Select year</option>
      </select>
      <select id="subject" class="form-select" aria-label="select example">
        <option selected>Select subject</option>
      </select>
      <select id="chapter" class="form-select" aria-label="select example">
        <option selected>Select chapters</option>
      </select>
      <button type="button" id="submit" class="btn btn-primary" type="submit">
        submit
      </button>
      <button type="button" id="clear" class="btn btn-primary" disabled>
        clear
      </button>
    </form>
    <form id="question_container" enctype="multipart/form-data">
        <div id="section1">
          <textarea name="question" id="question" placeholder="enter your question here"></textarea>
          <input type="file" name="question_image">
          <select class="form-select" aria-label="Default select example" name="question_type">
            <option selected>select question type</option>
            <option value="mcq">multiple choice</option>
            <option value="short">short answer</option>
            <option value="para">paragraph</option>
          </select>
      </div>
        <div id="section2">
          <div id="options">
            <div class="input-container">
              <input type="text" name="option1" id="option1" placeholder="option1">
              <input type="file" name="option1_image">
            </div>
            <div class="input-container">
              <input type="text" name="option2" id="option2" placeholder="option2">
              <input type="file" name="option2_image">
            </div>
            <div class="input-container">
              <input type="text" name="option3" id="option3" placeholder="option3">
              <input type="file" name="option3_image">
            </div>
          <div class="input-container">
            <input type="text" name="option4" id="option4" placeholder="option4">
            <input type="file" name="option4_image">
          </div>
          </div>
          <div>
            <textarea id="solution" name="solution" placeholder="solution"></textarea>
            <input type="file" name="solution_image">
          </div>
          </div>
          <div id="section3">
            <select class="form-select" aria-label="Default select example" name="level">
              <option selected>select level</option>
              <option value="easy">easy</option>
              <option value="med">medium</option>
              <option value="hard">hard</option>
            </select>
            <select class="form-select" aria-label="Default select example" name="key">
              <option selected>answer key</option>
              <option value="option1">option1</option>
              <option value="option2">option2</option>
              <option value="option3">option3</option>
              <option value="option4">option4</option>
            </select>
            <input type="number" id="minimum_time" name="minimum_time" placeholder="minimum time in sec">
            <button type="submit">Save</button>
          </div>
          <!-- <button type="submit" onclick="addContainer()">Add question</button> -->
        </form>
    
    <script src="js/dropdowns.js"></script>
    <script src="js/questions.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
